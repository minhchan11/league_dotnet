@model IEnumerable<SportLeague.Models.Team>

@{
    ViewData["Title"] = "Teams Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h4>@Html.DisplayNameFor(model => model.name)</h4>
    <ul>
        @foreach (var teamItem in Model)
        {
            <li>@Html.DisplayFor(modelItem => teamItem.name) | @Html.ActionLink("Details", "Details", new { id = teamItem.teamId }) | @Html.ActionLink("Delete", "Delete", new { id = teamItem.teamId }) | @Html.ActionLink("Edit", "Edit", new { id = teamItem.teamId })</li>

        }
    </ul>

<p>@Html.ActionLink("Add new team", "Create") </p>
